!!!
%html
  %head
    = haml :head

  %body
    %div{:class => "container form-signin border mt-5 pl-5 pr-5"}
      %h3{:class => "mb-3"} Sign in to Mumble Pluginbot Webinterface
      %form{:class => "form-signin", :method => "POST"}
        %div{:class => "form-group"}
          %label{:id => "usr"} Username:
          %input{:name => "username", :class => "form-control"}
        %div{:id => "pwd", :class => "form-group"}
          %label Password:
          %input{:name => "password", :class => "form-control"}
        %button{:class => "btn btn-lg btn-danger btn-block mb-5", :id => "submit"} Login
