#accountModal.modal.fade{"aria-hidden" => "true", 
  "aria-labelledby" => "accountModal", :role => "dialog", :tabindex => "-1"}
  %form{:method => "POST", :action => "/acc_change"}
    .modal-dialog{:role => "document"}
      .modal-content
        .modal-header
          %h5.modal-title User Settings:
          %button.close{"aria-label" => "Close", "data-dismiss" => "modal",
          :type => "button"}
            %span{"aria-hidden" => "true"} Ã—
        .modal-body
          .row
            .col-12
              .form-group
                %label Name:
                %input.form-control{:value => session[:usr], 
                  :disabled => "disabled"}
              .form-group
                %label E-Mail:
                %input.form-control{:value => session[:email], :name => "email"}
              .form-group.form-check
                %input#newPassword.form-check-input{:type => "checkbox", :name => "changePw"}
                %label.form-check-label{:for => "newPassword"}  
                  Change password:
          .row#newPwRow
            .col-12
              .form-group
                %label Old password:
                %input.form-control{:name => "oldpw"}
              .form-group#NewPwGrp
                %label New password:
                %input.form-control{:name => "newpw"}
              .form-group
                %label Repeat new password:
                %input.form-control{:name => "newpwrpt"}

        .modal-footer
          %button.btn.btn-secondary{"data-dismiss" => "modal",
            :type => "button"} Close
          %button.btn.btn-primary{:type => "submit"} Save
