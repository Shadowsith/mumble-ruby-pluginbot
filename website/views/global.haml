%h3 #{session[:bot]['mumble']['name']} Settings
%div.form-group.ml-1
  %label Debug:
  %select.form-control{:name => "debug"}
    - if session[:bot]['debug'] == true 
      %option{:value => "true", :selected => "selected"} true
      %option{:value => "false"} false
    - else
      %option{:value => "true"} true
      %option{:value => "false", :selected => "selected"} false
%div.form-group.ml-1
  %label Language:
  %input.form-control{:name => "lang", :value => session[:bot]['language']}
